<h1>todays recommendations</h1>

{{#each users}}
<section class='accounts'>
  <div>
    <img class='accounts' src="/images/girl.jpg" alt="">
    <h1>{{firstName}} {{lastName}}</h1>
    <p>{{age}} years</p>
    <p>{{location}} away</p>


    <button class='toggle'>meer info</button>
  </div>

  <div class="info">
    <p>{{meerInformatie}}</p>
  </div>

  <div>
    <button class="skipButtonToggle"> <img id="skipknop" src="images/skipknop.png"></button>

    <form action="/likeuser" method="POST">
      <button class="likebutton" type="submit" name="userid" value={{_id}}> <img id="likeknop" src="images/likeknop.png"
          </button>
    </form>
  </div>

</section>

{{/each}}

